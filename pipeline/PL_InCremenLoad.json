{
	"name": "PL_InCremenLoad",
	"properties": {
		"activities": [
			{
				"name": "Lookup-GetTables",
				"type": "Lookup",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "SqlServerSource",
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"dataset": {
						"referenceName": "DS_GetIncrementalLoadConfigTable",
						"type": "DatasetReference"
					},
					"firstRowOnly": false
				}
			},
			{
				"name": "ForEach - Loop Through Config Table",
				"type": "ForEach",
				"dependsOn": [
					{
						"activity": "Lookup-GetTables",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@activity('Lookup-GetTables').output.value",
						"type": "Expression"
					},
					"activities": [
						{
							"name": "Lookup-WaterMarkConfigTable",
							"type": "Lookup",
							"dependsOn": [],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "AzureSqlSource",
									"sqlReaderQuery": {
										"value": "SELECT * FROM ConfigTable WHERE TableName='@{item().TABLE_NAME}'",
										"type": "Expression"
									},
									"queryTimeout": "02:00:00",
									"partitionOption": "None"
								},
								"dataset": {
									"referenceName": "DS_AZSQLDB_DestionDB",
									"type": "DatasetReference"
								}
							}
						},
						{
							"name": "Lookup-NewConfigTable",
							"type": "Lookup",
							"dependsOn": [],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "AzureSqlSource",
									"sqlReaderQuery": {
										"value": "SELECT MAX(@{item().ConfigColumn}) AS NewValueConfig FROM @{item().TABLE_NAME}",
										"type": "Expression"
									},
									"queryTimeout": "02:00:00",
									"partitionOption": "None"
								},
								"dataset": {
									"referenceName": "DS_AZSQLDB_DestionDB",
									"type": "DatasetReference"
								}
							}
						},
						{
							"name": "Copy data - Incremental Load",
							"type": "Copy",
							"dependsOn": [
								{
									"activity": "Lookup-WaterMarkConfigTable",
									"dependencyConditions": [
										"Succeeded"
									]
								},
								{
									"activity": "Lookup-NewConfigTable",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "AzureSqlSource",
									"sqlReaderQuery": {
										"value": "select * from @{item().TABLE_NAME}\nwhere @{item().ConfigColumn} > \n'@{activity('Lookup-OldWaterConfigTable').output.firstRow.LastModifiedValue}' \nand @{item().ConfigColumn} <= \n'@{activity('Lookup-NewWaterMarkConfigTable').output.firstRow.NewWaterMarkValue}'",
										"type": "Expression"
									},
									"queryTimeout": "02:00:00",
									"partitionOption": "None"
								},
								"sink": {
									"type": "AzureSqlSink",
									"sqlWriterStoredProcedureName": {
										"value": "@item().StoreProcedureNameMergeOperation",
										"type": "Expression"
									},
									"sqlWriterTableType": {
										"value": "@item().TableType",
										"type": "Expression"
									},
									"storedProcedureTableTypeParameterName": {
										"value": "@item().TABLE_NAME",
										"type": "Expression"
									},
									"disableMetricsCollection": false
								},
								"enableStaging": false,
								"translator": {
									"type": "TabularTranslator",
									"typeConversion": true,
									"typeConversionSettings": {
										"allowDataTruncation": true,
										"treatBooleanAsNumber": false
									}
								}
							},
							"inputs": [
								{
									"referenceName": "DS_AZSQL_Student",
									"type": "DatasetReference"
								}
							],
							"outputs": [
								{
									"referenceName": "DS_IncrementalLoad",
									"type": "DatasetReference",
									"parameters": {
										"SinkTableName": {
											"value": "@item().TABLE_NAME",
											"type": "Expression"
										}
									}
								}
							]
						},
						{
							"name": "Stored procedure - UpdateConfigTable",
							"type": "SqlServerStoredProcedure",
							"dependsOn": [
								{
									"activity": "Copy data - Incremental Load",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"storedProcedureName": "[dbo].[Sp_GetConfigurationTable]",
								"storedProcedureParameters": {
									"LastModifiedtime": {
										"value": {
											"value": "@activity('Lookup-WaterMarkConfigTable').output.firstRow.LastModifiedValue",
											"type": "Expression"
										},
										"type": "DateTime"
									},
									"TableName": {
										"value": {
											"value": "@activity('Lookup-WaterMarkConfigTable').output.firstRow.TableName",
											"type": "Expression"
										},
										"type": "String"
									}
								}
							},
							"linkedServiceName": {
								"referenceName": "LS_AZSQLDB_DestionDB",
								"type": "LinkedServiceReference"
							}
						}
					]
				}
			}
		],
		"annotations": [],
		"lastPublishTime": "2021-04-25T05:10:00Z"
	},
	"type": "Microsoft.DataFactory/factories/pipelines"
}